                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee item in Model.employees)
                       {
                        <tr class="border-bottom-warning">
                            <td>@item.FullName</td>
                            <td>@item.BirthDay</td>

                        </tr>
                      
                       }
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>

