@model ManagerIndexVM

@{
    ViewData["Title"] = "Index";
  
    int id = ViewContext.HttpContext.Session.GetInt32("ID").Value;

}


@*MANAGER İZİN GÜNLERİ GRAFİĞİ*@
<div class="row">
    <div class="col-4">
        <div class="card-body">
            <p class="text-center"> İzin Günleri </p>
            <div class="chart-pie pt-4">
                <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                        <div class=""></div>
                    </div>
                    <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                    </div>
                </div>
                <canvas id="myPieChart" width="327" height="316" style="display: block; height: 253px; width: 262px;" class="chartjs-render-monitor"></canvas>
            </div>

            <hr>

        </div>
        <div class="pt-2">
            <h6 class="font-weight-bold text-primary text-center">
                <img src="~/MAP Page/img/personel-odeme.png" style="width:32px; height:32px;" />
                Personel Ödemeleri
            </h6>
            <table class="m-0 table border-left-warning table-bordered dataTable" id="dataTable" width="110%" style="overflow-y:scroll">
                <thead>
                    <tr role="row" class="border-bottom-warning">
                        <th class="border-bottom-warning" style="width: 67px; height:10px; " colspan="1">Personel Adı</th>
                        <th class="border-bottom-warning" style="width: 67px; height: 10px;">Ödeme Tutarı</th>
                        <th class="border-bottom-warning" style="width: 67px; height: 10px;">Prim Oranı</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Employee item in Model.employees)
                    {

                        <tr class="border-bottom-warning">
                            <td>@item.FullName</td>
                            <td>@item.NetSalary</td>
                            <td>@item.PremiumRate</td>

                        </tr>

                    }


                </tbody>
            </table>

        </div>


        @*PERSONELLERİN MAAŞLARI*@

    </div>

    @*PERSONELLERİN DEPARTMANLARINA GÖRE GRAFİK GÖSTERİMİ*@
    <div class="col-5">
        <div class="card-body">
            <p class="text-center"> Çalışan Sayısı </p>
            <div class="chart-pie pt-4">
                <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                        <div class=""></div>
                    </div>
                    <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                    </div>
                </div>
                <canvas id="myPieChartPersonal" width="327" height="316" style="display: block; height: 253px; width: 262px;" class="chartjs-render-monitor"></canvas>
            </div>

            <hr>

        </div>
        <div class="row">
            <div class="col-6 pe-1">
                <h6 class="font-weight-bold text-primary text-center">
                    <img src="~/MAP Page/img/card-icon.png" style="width:32px; height:32px;" />
                    Personel Harcamaları
                </h6>
                <table class="m-0 table border-left-warning table-bordered dataTable" id="dataTable" width="110%" style="overflow-y:scroll">
                    <thead>
                        <tr role="row" class="border-bottom-warning">
                            <th class="border-bottom-warning" style="width: 67px; height:10px; " colspan="1">Personel Adı</th>
                            <th class="border-bottom-warning" style="width: 67px; height: 10px;">Harcama</th>

                        </tr>
                    </thead>
                    <tbody>
                           
                        @foreach (Expenditure item in Model.expenditures)
                       {
                        <tr class="border-bottom-warning">
                            <td>@item.Employee.FullName</td>
                            <td>@item.ExpenditureAmount</td>

                        </tr>
                       }
                   


                    </tbody>
                </table>
            </div>
            <div class="col-6 pe-1">
                <h6 class="font-weight-bold text-primary text-center">
                    <img src="~/MAP Page/img/canle-icon.png" style="width:32px; height:32px;" />
                    Personel Doğum Günleri
                </h6>
                <table class="m-0 table border-left-warning table-bordered dataTable" id="dataTable" width="110%" style="overflow-y:scroll">
